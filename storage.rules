rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if request.auth != null;
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para documentos de usuario
    match /users/{userId}/documents/{allPaths=**} {
      // Solo el dueño del documento puede leer o escribir directamente
      // NOTA: El Backend (Admin SDK) ignora estas reglas y siempre tiene acceso
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para fotos de perfil u otros archivos públicos
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regla por defecto: denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
