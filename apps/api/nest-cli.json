{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "email/templates/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  },
  "watchOptions": {
    "watch": true,
    "watchAssets": true,
    "watchMode": "auto"
  }
}
